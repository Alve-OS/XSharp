{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet-build",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}\\source\\XSharp.Compiler\\"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "npm-compile",
            "type": "npm",
            "script": "compile",
            "path": "source/XSharp.VSCode/",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "npm-watch",
            "type": "npm",
            "script": "watch",
            "path": "source/XSharp.VSCode/",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
