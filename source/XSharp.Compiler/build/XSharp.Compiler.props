<Project>

    <Choose>
        <When Condition="'$(MSBuildRuntimeType)' == 'Core'">
            <PropertyGroup>
                <XscToolPath>$(MSBuildThisFileDirectory)..\tools\netcoreapp\</XscToolPath>
                <XscToolExe Condition="'$(OS)' == 'Windows_NT'">RunCsc.cmd</XscToolExe>
                <XscToolExe Condition="'$(OS)' != 'Windows_NT'">RunCsc</XscToolExe>
            </PropertyGroup>
        </When>
        <Otherwise>
            <PropertyGroup>
                <XscToolPath>$(MSBuildThisFileDirectory)..\tools\win\</XscToolPath>
                <XscToolExe>xsc.exe</XscToolExe>
            </PropertyGroup>
        </Otherwise>
    </Choose>
    
</Project>
