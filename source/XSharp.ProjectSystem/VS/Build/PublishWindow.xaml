<platformUI:DialogWindow x:Class="XSharp.ProjectSystem.VS.Build.PublishWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:XSharp.ProjectSystem.VS.Build"
                         xmlns:platformUI="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                         mc:Ignorable="d"
                         HasMinimizeButton="False"
                         HasMaximizeButton="False">

    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.Resources>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="3*"/>
                                    </Grid.RowDefinitions>

                                    <UniformGrid Grid.Row="0"
                                                 Rows="1"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Stretch"
                                                 IsItemsHost="true" />

                                    <Border BorderThickness="0, 1" BorderBrush="#D0CEBF" Grid.Row="1">
                                        <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter ContentSource="SelectedContent" />
                                            </Border>
                                        </Border>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <ToggleButton Name="ToggleButton"
                                              Margin="4"
                                              Padding="4"
                                              IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header" />
                                </ToggleButton>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <TabControl x:Name="tabPublishTypeSelector">
                <TabItem>
                    <TabItem.Header>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">USB</TextBlock>
                            <Image Source="../../Resources/XSharpProjectTreeIcon.png" />
                        </DockPanel>
                    </TabItem.Header>
                    <RadioButton>TestA</RadioButton>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">PXE</TextBlock>
                            <Image Source="../../Resources/XSharpProjectTreeIcon.png" />
                        </DockPanel>
                    </TabItem.Header>
                    <RadioButton>TestB</RadioButton>
                </TabItem>
            </TabControl>
        </Grid>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="4, 0"
                    Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="platformUI:DialogButton">
                    <Setter Property="Height" Value="24" />
                    <Setter Property="Margin" Value="4, 8, 4, 8" />
                    <Setter Property="MinWidth" Value="64" />
                </Style>
            </StackPanel.Resources>

            <platformUI:DialogButton>OK</platformUI:DialogButton>
            <platformUI:DialogButton>Cancel</platformUI:DialogButton>
        </StackPanel>
    </Grid>
</platformUI:DialogWindow>
