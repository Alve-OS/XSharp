<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <!--<ItemGroup Label="ProjectConfigurations">
        <ProjectConfiguration Include="Debug|AnyCPU">
            <Configuration>Debug</Configuration>
            <Platform>AnyCPU</Platform>
        </ProjectConfiguration>
        <ProjectConfiguration Include="Release|AnyCPU">
            <Configuration>Release</Configuration>
            <Platform>AnyCPU</Platform>
        </ProjectConfiguration>
    </ItemGroup>-->

    <PropertyGroup>
        <_XSharpRulesXamlResourcesDirectory>$(MSBuildThisFileDirectory)</_XSharpRulesXamlResourcesDirectory>
    </PropertyGroup>

    <ItemGroup>        
        <ProjectCapability Include="AllTargetOutputGroups;
                                    AssemblyReferences;
                                    DeclaredSourceItems;
                                    DependenciesTree;
                                    HandlesOwnReload;
                                    LaunchProfiles;
                                    NoGeneralDependentFileIcon;
                                    ProjectReferences;
                                    PackageReferences;
                                    OutputGroups;
                                    SingleFileGenerators;
                                    UseFileGlobs;
                                    UserSourceItems;
                                    VisualStudioWellKnownOutputGroups;" />

        <ProjectCapability Include="ReferenceManagerAssemblies" />
        <ProjectCapability Include="ReferenceManagerBrowse" />
        <ProjectCapability Include="ReferenceManagerProjects" />

        <ProjectCapability Include="XSharp"/>
    </ItemGroup>

    <ItemGroup>
        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\General.xaml">
            <Context>Project</Context>
        </PropertyPageSchema>
        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\ProjectItemsSchema.xaml" />
        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\DebuggerGeneral.xaml">
            <Context>Project</Context>
        </PropertyPageSchema>
        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\GeneralFile.xaml">
            <Context>File</Context>
        </PropertyPageSchema>
        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\SourceControl.xaml">
            <Context>Invisible</Context>
        </PropertyPageSchema>

        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\General.BrowseObject.xaml">
            <Context>BrowseObject</Context>
        </PropertyPageSchema>

        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)Rules\Compile.xaml;
                                     $(_XSharpRulesXamlResourcesDirectory)Rules\Folder.xaml;
                                     $(_XSharpRulesXamlResourcesDirectory)Rules\None.xaml;">
            <Context>File;BrowseObject</Context>
        </PropertyPageSchema>

        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)ProjectReference.xaml">
            <Context>Project;BrowseObject</Context>
        </PropertyPageSchema>
        <PropertyPageSchema Include="$(_XSharpRulesXamlResourcesDirectory)ResolvedProjectReference.xaml">
            <Context>ProjectSubscriptionService;BrowseObject</Context>
        </PropertyPageSchema>
    </ItemGroup>

    <ItemGroup>
        <Compile Include="**\*.xs" />
    </ItemGroup>

    <Import Project="$(MSBuildProjectFullPath).user" Condition="Exists('$(MSBuildProjectFullPath).user')" />

    <Target Name="ResolveProjectReferences" Returns="@(_ResolvedProjectReference)">
        <ItemGroup>
            <_ResolvedProjectReference Include="@(ProjectReference)" />
            <!--
            <_ResolvedProjectReference Include="@(ProjectReference)" Condition="Exists('%(ProjectReference.FullPath)')" />
            -->
        </ItemGroup>
    </Target>

    <Target Name="PrepareForBuild" />
    <Target Name="Compile" />
    <Target Name="Assemble" />
    <Target Name="Link" />
    <Target Name="PrepareForRun" />

    <PropertyGroup>
        <BuildDependsOn>
            PrepareForBuild;
            Compile;
            Assemble;
            Link;
            PrepareForRun;
        </BuildDependsOn>
    </PropertyGroup>

    <Target Name="Build" DependsOnTargets="$(BuildDependsOn)">
        <Message Importance="High" Text="Build" />
    </Target>

    <Target Name="Clean">
        <Message Importance="High" Text="Clean" />
    </Target>

    <Target Name="Rebuild" DependsOnTargets="Clean;Build" />

    <Target Name="Run">
        <Error Condition="'$(OutputType)' != 'Application'" Text="The Run target only supports Application projects." />
        <Message Importance="High" Text="Run" />
    </Target>

</Project>
